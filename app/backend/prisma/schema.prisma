generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Eventos {
  id Int @id @default(autoincrement())
  nombre_organizador String?
  nombre_evento String?
  fecha_init DateTime
  fecha_fin DateTime
  observacion String?
  email String?
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  name String?
  password String
  rol ROLUSER
}


enum ROLUSER {
  ADMIN
  USER
}
